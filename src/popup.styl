@import 'common.css'
@import "dialog.css"

body
	padding: 0
	overflow: hidden
	background-color: white // avoid paint-over bug

#panel-size-request
	width: 400px

#tasks-wrapper
	display: flex
	flex-direction: column
	flex: 1
	overflow: auto

#tasks, .task
	display: flex
	flex-direction: column

#empty-tasks
	display: none
	padding: 1em 0
	text-align: center
	
#tasks:empty + #empty-tasks
	display: unset

.task
	padding: 0.4em
	border-bottom: 1px solid lightgray 

.task-row
	display: flex
	align-items: center

.task-row:not(:nth-of-type(1))
	margin-top: 0.2em

tool-button(size)
	display: flex
	appearance: none
	-moz-appearance: none
	-webkit-appearance: none
	border: 0
	padding: 0
	background: none
	&::-moz-focus-inner
		border: 0
		padding: 0
	&:not([disabled]):focus
		outline: 1px dotted blue
	&:not([disabled]):hover
		background-color: hsla(0, 0%, 0%, .1)
	& > svg, & > img
		width: size
		height: size

.summary-row > button
	tool-button(1em)
	padding: 0.25em

.pause.pause-is-stop > :not(.stop-icon)
	display: none
.pause:not(.pause-is-stop) > .stop-icon
	display: none

.state-icon
	margin-right: 0.2em 
	width: 1em
	height: 1em
	padding: 0.1em

.filename
	flex: 1
	text-overflow: ellipsis
	overflow: hidden
	white-space: nowrap
	min-width: 0
	
	&:after
		content: '\FEFF'
		visibility: hidden

.progress-canvas-wrapper
	height: 1em
	flex: 1
	position: relative

.progress-canvas
	background-color: lightgray
	display: block
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%

.detail-row > span
	margin-right: 0.8em

.current-size:after
	content: ' / '
	white-space: pre-wrap

.total-size:after
	content: ' ('
	white-space: pre-wrap

.percentage:after
	content: ')'

#toolbar
	display: flex
	background-color: #f1f2f3
	padding: 1px
	& > button
		tool-button(1.5em)
		padding: 0.2em

#confirm-overlay
	display: flex
	position: fixed
	background-color: hsla(0, 0%, 10%, .5)
	width: 100%
	height: 100%
	align-items: center
	justify-content: center

#confirm
	display: flex
	flex-direction: column
	align-items: center
	background-color: white
	padding: 8px

#confirm-actions
	margin-top: 8px
