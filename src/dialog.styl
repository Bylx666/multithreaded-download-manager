html, body, #main-form
	display: flex
	flex-direction: column
	flex: 1
	margin: 0

html
	width: 100%
	height: 100%

body
	padding: 12px
	font: 14px caption
	-moz-user-select: none
	-webkit-user-select: none

.spacer
	flex: 1

#actions
	display: flex
	justify-content: right

#actions > button:not(:first-child)
	margin-left: 6px